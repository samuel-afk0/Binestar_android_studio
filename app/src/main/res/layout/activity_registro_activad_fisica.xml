<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro_ActivadFisica">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿Quieres guardar tu progreso?"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="407dp"
        android:layout_height="178dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/transparenteprogreso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:id="@+id/lnlid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/textV1"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="19dp"
            android:alpha="0.7"
            android:text="Ingresa los datos necesarios:"
            android:textAlignment="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp">



            <Spinner
                android:id="@+id/SpOpcionescombo"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginStart="8dp" />
            <EditText
                android:id="@+id/edtdistancia"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llBotones2"
        android:layout_width="343dp"
        android:layout_height="97dp"
        android:layout_marginBottom="96dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlid"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnEnviar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/enviar" />

        <Button
            android:id="@+id/btnCancelar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancelar" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>